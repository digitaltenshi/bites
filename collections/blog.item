
{.section item}


  <!--WRAPPER-->
  


  <article id="post-{id}" class="{@|item-classes}  {.repeated section tags}t_{@|slugify} {.end}  {.repeated section categories}c_{@|slugify} {.end}" data-item-id="{id}" style="float: right; width: 75%;">
<div class = "blog-article-container">
  
    <div class="categories"> <!--CATEGORIES-->
    {.repeated section categories}
      <a class="category" href="{collection.fullUrl}?category={@|url-encode}">{@}</a>{.alternates with} 
    {.end}
    </div>
    <!--TAGS-->
    <div class="tags">
    {.repeated section tags}
      <a class="tag" href="{collection.fullUrl}?tag={@|url-encode}">{@}</a>{.alternates with} 
    {.end}
    </div>
    
    <!--POST TILE-->
    
    <h1 class="title" data-content-field="title">
      {.passthrough?}
     <!--    <a href="{sourceUrl}" target="_blank">{title}</a> -->
      {.or}
         <a href="{fullUrl}">{title}</a>
      {.end}
    </h1>

        <!--AUTHOR AND DATE-->
    
    <div class="meta">
      <a href="{collection.fullUrl}?author={author.id}">{author.displayName}</a> <time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time><div class="fb-like" data-href="{website.baseUrl}/{fullUrl}" data-layout="button_count" data-action="like" data-size="small" data-show-faces="false" data-share="true"></div>
      {.section sourceUrl}
        <a href="{@}" class="source" target="_blank">Website</a>
      {.end}
    </div>        
  
    
    <!--MAIN CONTENT-->

    {body}

    <!--BLOG INJECTION-->

    {postItemInjectCode}    

    <hr>
    <!--SHARE AND LIKE-->

    {@|like-button}

    <!--LOCATION-->

    {.section location}
      {.section addressTitle}
        <h3 class="location">{addressTitle}</h3>
        <h4 class = "location">{addressLine1}</h4>
        <h4 class = "location">{addressLine2}</h4>
      {.end}
    {.end}

    <!--COMMENTS-->

    {@|comments}
</div>



  </article>



  <div class = "related" style = "width: 20%; float: left;">
    <h2>Share</h2>
    <div class = "share-widgets">{@|social-button}</div>

    {.if tags}

      <h2>Related</h2>

      {.repeated section tags}
        <squarespace:query collection="blog" limit="2" tag="{@}" skip="1">
                {.if items}
                <div class="post-related-items-wrapper clear">
                    <div class="items">
                        {.repeated section items}
                           <p data-content-field="title">
                            {.passthrough?}
                              <a href="{sourceUrl}" target="_blank">{title}</a>
                            {.or}
                              <a href="{fullUrl}">{title}</a>
                            {.end}
                          </p>                                                     
                        {.end}
                    </div>
                </div>
              {.end}
        </squarespace:query>
     {.end}
  {.end}

{.end}
</div>

