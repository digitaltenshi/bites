
{.section item}


  <!--WRAPPER-->
  


  <article id="post-{id}" class="{@|item-classes}  {.repeated section tags}t_{@|slugify} {.end}  {.repeated section categories}c_{@|slugify} {.end}" data-item-id="{id}" style="float: right; width: 75%;">
  <div class = "blog-article-container">
  <!--CATEGORIES-->

    <div class="categories"> <!--CATEGORIES-->
    {.repeated section categories}
      <a class="category" href="{collection.fullUrl}?category={@|url-encode}">{@}</a>{.alternates with} 
    {.end}
    </div>
    <!--TAGS-->
    <div class="tags">
    {.repeated section tags}
      <a class="tag" href="{collection.fullUrl}?tag={@|url-encode}">{@}</a>{.alternates with} 
    {.end}
    </div>
    
    <!--POST TILE-->

    <h1 class="title" data-content-field="title">
      <a href="{fullUrl}">{title}</a>
    </h1>
    <hr>
   

        <!--AUTHOR AND DATE-->
    
    <p class="meta">
      <a href="{collection.fullUrl}?author={author.id}">{author.displayName}</a> <time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time>
      {.section sourceUrl}
        <label>Source</label> <a href="{@}" class="source" target="_blank">{@}</a>
      {.end}
    </p>        

    <!--MAIN CONTENT-->

    {body}

    <!--BLOG INJECTION-->

    {postItemInjectCode}    

    <hr>
    <!--SHARE AND LIKE-->
    {@|like-button}
    {@|social-button}

    <!--LOCATION-->

    {.section location}
      {.section addressTitle}
        <!-- <h3 class="location">{location.addressTitle}</h3>
        <h4 class = "location">{location.addressLine1}</h4>
        <h4 class = "location">{location.addressLine2}</h4> -->
        {.if customContent.bus_address}
          <div class = "addressinfo">
            <h4>{location.addressTitle}</h4>
            {.if customContent.bus_address}<span>{customContent.bus_address}</span>{.end}
            {.if customContent.bus_city_st_zip}<span>{customContent.bus_city_st_zip}</span>{.end}
            {.if customContent.bus_phone}<span class = "phone">{customContent.bus_phone}</span>{.end}
            {.if customContent.webLink.html}<span class = "weblink">{customContent.webLink.html}</span>{.end}
          </div>
        {.end}
      {.end}
    {.end}


    <!--COMMENTS-->

    {@|comments}
</div>
  </article>


   <div class = "related" style = "width: 20%; float: left;">
     <h2>Share</h2>
     <div class = "share-widgets">{@|social-button}</div>

     {.if tags}

       <h2>Related</h2>

       {.repeated section tags}
         <squarespace:query collection="new-ct-directory" limit="2" tag="{@}" skip="1">
                 {.if items}
                 <div class="post-related-items-wrapper clear">
                     <div class="items">
                         {.repeated section items}
                            <p data-content-field="title">
                             {.passthrough?}
                               <a href="{sourceUrl}" target="_blank">{title}</a>
                             {.or}
                               <a href="{fullUrl}">{title}</a>
                             {.end}
                           </p>                                                     
                         {.end}
                     </div>
                 </div>
               {.end}
         </squarespace:query>
      {.end}
   {.end}

 {.end}
 </div>
  
