
{.section item}


  <!--WRAPPER-->
  


  <article id="post-{id}" class="{@|item-classes}  {.repeated section tags}t_{@|slugify} {.end}  {.repeated section categories}c_{@|slugify} {.end}" data-item-id="{id}" style="float: right; width: 75%;">

  <!--CATEGORIES-->

    {.repeated section categories}
      <a class="category" href="{collection.fullUrl}?category={@|url-encode}">{@}</a>{.alternates with} 
    {.end}

    <!--TAGS-->

    {.repeated section tags}
      <a class="tag" href="{collection.fullUrl}?tag={@|url-encode}">{@}</a>{.alternates with} 
    {.end}
    
    <!--POST TILE-->

    <h1 class="title" data-content-field="title">
      {.passthrough?}
        <a href="{sourceUrl}" target="_blank">{title}</a>
      {.or}
        <a href="{fullUrl}">{title}</a>
      {.end}
    </h1>
    <hr>
    <!--SHARE AND LIKE-->
    {@|like-button}
    {@|social-button}

        <!--AUTHOR AND DATE-->
    
    <p class="meta">
      <a href="{collection.fullUrl}?author={author.id}">{author.displayName}</a> <time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time>
      {.section sourceUrl}
        <label>Source</label> <a href="{@}" class="source" target="_blank">{@}</a>
      {.end}
    </p>        

    <!--MAIN CONTENT-->

    {body}

 

    <!--BLOG INJECTION-->

    {postItemInjectCode}    

    
    <br>






    <!--LOCATION-->

    {.section location}
      {.section addressTitle}
        <h3 class="location">{location.addressTitle}</h3>
        <h4 class = "location">{location.addressLine1}</h4>
        <h4 class = "location">{location.addressLine2}</h4>
      {.end}
    {.end}


    <!--COMMENTS-->

    {@|comments}

  </article>


  <div class = "clear clearfix"></div>
  
